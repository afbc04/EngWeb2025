extends layout 

block content
    .w3-card-4
        header.w3-container.w3-light-blue
            h2 Editar Aluno

        a.w3-button.w3-gray(href="/alunos") Voltar

        form.w3-container(method="POST")
            fieldset
                legend Dados
                label ID
                input.w3-input.w3-round(type="text" name="_id" readonly value= aluno._id)
                label Nome
                input.w3-input.w3-round(type="text" name="nome" value= aluno.nome)
                label Link do Github
                input.w3-input.w3-round(type="text" name="gitlink" value = aluno.gitlink)
            fieldset 
                legend TPC 
                
                    - for(let i=1; i < 9; i++){
                    - let tpc = `tpc${i}`
                    - if(tpc in aluno) {
                        input.w3-check(type="checkbox" name=tpc value="1" checked)
                        label TPC#{i}
                    -}
                    - else { 
                        input.w3-check(type="checkbox" name=tpc value="1") 
                        label TPC#{i}
                    - }}
                    
            br
            button.w3-btn.w3-teal.w3-mb-2(type="submit") Edit