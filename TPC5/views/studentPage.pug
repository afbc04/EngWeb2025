extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-indigo
            h1 Aluno #{aluno._id}

        .w3-container 
            a.w3-button.w3-gray(href="/alunos") Voltar
            a.w3-btn.w3-ripple.w3-round.w3-light-blue(href="/alunos/edit/"+aluno._id) Editar Aluno
            a.w3-btn.w3-ripple.w3-round.w3-red(href="/alunos/delete/"+aluno._id) Remover Aluno

            ul.w3-ul.w3-card-4(style="width:50%")

                li 
                    b ID: 
                    | #{aluno._id}
                li 
                    b Nome: 
                    | #{aluno.nome}
                li 
                    b Link do github: 
                    | #{aluno.gitlink}

        .w3-container.w3-margin-8
            ul.w3-ul

                - for(let i=1; i < 9; i++){
                    - key = `tpc${i}`
                    - if(key in aluno){
                        li 
                            b TPC#{i}
                        - }
                    - }

