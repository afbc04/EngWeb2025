extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-indigo
            h1 Lista de Alunos

        if tipo == 1
            header.w3-container.w3-teal
                h3 Aluno "#{aluno_id}" foi adicionado!

        if tipo == 2
            header.w3-container.w3-light-blue
                h3 Aluno "#{aluno_id}" foi editado!

        if tipo == 3
            header.w3-container.w3-red
                h3 Aluno "#{aluno_id}" foi removido!

    .w3-container.w3-white
        h6
                    
        .w3-container

            a.w3-btn.w3-ripple.w3-round.w3-teal(href="/alunos/registo") Adicionar Aluno

            table.w3-table-all 
                tr
                    th ID 
                    th Nome 
                    th Link do Github 
                    th Actions
                each aluno in slist 
                    tr 
                        td
                            a(href="/alunos/" + aluno._id)=aluno._id
                        td= aluno.nome
                        td
                            a(href=aluno.gitlink)=aluno.gitlink 
                        td
                                a(href="/alunos/edit/" + aluno._id)
                                    i.fa.fa-edit
                                a(href="/alunos/delete/" + aluno._id)
                                    i.fa.fa-trash
