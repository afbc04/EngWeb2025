extends ../layout

block content 

    .w3-card-4 
        header.w3-container.w3-indigo 
            h1 Filme - #{filme.id}
    
        .w3-container 
            a(href="/filmes").w3-button.w3-gray Voltar 
            a(href="/filmes/edit/" + filme.id).w3-btn.w3-ripple.w3-round.w3-light-blue Editar Filme 
            a(href="/filmes/delete/" + filme.id).w3-btn.w3-ripple.w3-round.w3-red Remover Filme 

            ul.w3-ul.w3-card-4(style="width:50%")
                li 
                    b Título: 
                    |   #{filme.id}
                li
                    b Ano: 
                    |   #{filme.ano}
                li 
                    b Elenco: 
                    .w3-container.w3-margin-8 
                        ul.w3-ul 

                            each a in filme.atores
                                li #{a}
                li 
                    b Género: 
                    .w3-container.w3-margin-8 
                        ul.w3-ul 

                            each g in filme.genero
                                li #{g}

