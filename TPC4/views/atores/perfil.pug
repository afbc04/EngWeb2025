            ul.w3-ul.w3-card-4(style="width:50%")
                li 
                    b Nome: 
                    |   #{ator.id}
                li 
                    b Filmes: 
                    .w3-container.w3-margin-8 
                        ul.w3-ul 

                            each f in ator.filmes
                                li #{f}