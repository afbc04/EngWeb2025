extends ../layout 

block content 

    .w3-card-4 
        header.w3-container.w3-indigo 
            h1 Lista de Atores 

        header.w3-container.w3-white 
            h6 
        
        .w3-container 
            a(href="/" class="w3-button w3-gray") Voltar 
            table.w3-table-all 
                tr
                    th Nome 
                    th Filmes 
                each a in atores 
                    tr 
                        td
                            a(href="/atores/" + a.id) #{a.id} 
                        td
                            ul.w3-ul 
                                each f in a.filmes
                                    li
                                        a(href="/filmes/" + f) #{f}
